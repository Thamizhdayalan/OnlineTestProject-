@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuestionViewAndSelectionPage</title>
    <script src="~/scripts/bootstrap.min.js"></script>
   <script src="~/scripts/bootstrap.bundle.min.js"></script>
   <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.7.1.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/datatables/jquery.datatables.min.js"></script>
    <link href="~/content/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/OnlineTestJS.js"></script>
</head>
<body>
    
        <div class="container mt-4">
             <div class="row">
            <div class="col-md-2">
               
                 @Html.Label("", "Select TestType")
                @Html.DropDownList("Test", (IEnumerable<SelectListItem>)ViewData["TestList"],"Select Test", new { @class = "form-select"})  

                 @Html.Label("", "Choose Subject")
                @Html.DropDownList("Subjects", (IEnumerable<SelectListItem>)ViewData["Subject"],"Choose Subject", new { @class = "form-select"})

                @*@Html.DropDownList("Subjects", new SelectList(ViewData["SubjectList"], "SubjectId", "SubjectName"), "Choose a Subject", new { @class = "form-select" })*@

            </div>  
                 <br />
                 <br />
                 <div class="col-md-8"> 
        
        <table id="Questionlist" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>SUBJECTID</th>
                 <th>QUESTIONID</th>
                <th>QUESTION</th>
                <th>CREATED DATE</th>
                <th>CHOOSE</th>
                <th>EDIT</th>
                <th>DELETE</th>
            </tr>
                </thead>
            <tbody></tbody>
        </table>
                      <button type="button" class="btn btn-primary" onclick="MakeTest()">SaveQuestions</button><br />   
        </div>
                 <div class="col-md-2">

                     <button type="button" class=" btn btn-success" >QuestionList</button> <br /> 
                 </div>
        </div>  
            </div>   
    
</body>
</html>
