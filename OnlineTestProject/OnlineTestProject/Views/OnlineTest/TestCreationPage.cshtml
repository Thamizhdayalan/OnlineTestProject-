@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TestCreationPage</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/OnlineTestJS.js"></script>
</head>
<body>
    <div class="container">
        <h3>Welcome to Test CreationPage Admin:</h3>
        <br />
        <br />
        <form id="Createtest" name="Createtest">
            @Html.Label("", "Enter TestName:")

            @Html.TextBox("TestName", "", new { @class = "form-control" })<br />

            @Html.Label("", "Enter StartDate:")

            @Html.TextBox("Startdate", "", new { @class = "form-control", type = "date" })<br />

            @Html.Label("", "Set Duration:")<br />

            <input type="text"  id="duration" name="duration" required pattern="[0-9]{2}:[0-9]{2}" value="00:00" title="Write a duration in the format hh:mm"><br />
            <br /><br />

           @* <input type="text" id="duration" name="duration" required pattern="([0-1][0-9]|2[0-3]):[0-5][0-9]" value="00:00" title="Write a duration in the format hh:mm">*@


            @* @Html.TextBox("Duration", "", new { @class = "form-control", required pattern = "[0-9]{2}:[0-9]{2}" })<br />*@

            @Html.Label("", "Enter ExpiryDate")
            @Html.TextBox("ExpiryDate", "", new { @class = "form-control", type = "date" })<br />

            <button type="button" class=" btn btn-success" onclick="Create()">Create</button><br />           
        </form>
        <br />
        <button type="button" class="btn btn-primary" onclick="ShowQuestions()">ShowQuestions</button><br />

        <table id="Questionlist" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>TESTNAME</th>
                <th>CREATED DATE</th>
                <th>STARTDATE</th>
                <th>DURATION</th>
                <th>EXPIRYDATE</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
                </thead>
            <tbody></tbody>
        </table>

    </div>
</body>
</html>
