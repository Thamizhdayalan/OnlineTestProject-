@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuestionCreationPage</title>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/OnlineTestJS.js"></script>
</head>
<body>
    <div>
        <div class="container">
        <h3>Welcome To Question CreationPage Admin</h3>
        <br />
        <div class="rows">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                @Html.Label("", "Choose Subject")
                @Html.DropDownList("Subjects", (IEnumerable<SelectListItem>)ViewData["Subject"], new { @class = "form-select"})

                <br />
                <br />
             
            </div>
            
            <div class="col-md-6">
                  @* <textarea class="form-control" id="questions" name="questions" rows="4" cols="50"></textarea>**@
                  @Html.Label("", "Enter Question:")
                @Html.TextArea("Question", "", new { @class = "form-control", @rows = 4, @cols = 50, required = "required" })<br />

                <form id ="Options" name="Options">
                      @Html.Label("", "Enter Options:")
                @Html.TextBox("IndexA", "A", new { @class = "form-control", })<br />

                @Html.TextBox("Option1", "", new { @class = "form-control", @placeholder = "Option1"})<br />

                     @Html.TextBox("IndexB", "B", new { @class = "form-control" })<br />

                @Html.TextBox("Option2", "", new { @class = "form-control", @placeholder = "Option2" })<br />

                     @Html.TextBox("IndexC", "C", new { @class = "form-control" })<br />

                @Html.TextBox("Option3", "", new { @class = "form-control" , @placeholder = "Option3"})<br />

                     @Html.TextBox("IndexD", "D", new { @class = "form-control" })<br />

                @Html.TextBox("Option4", "", new { @class = "form-control", @placeholder = "Option4" })<br />

                     @Html.TextBox("AnsIndex", "", new { @class = "form-control" , @placeholder = "AnswerIndex"})<br />

                @Html.TextBox("Answer", "", new { @class = "form-control", @placeholder = "Answer" })  <br /> 
                    </form>            
               <button type="button" class="btn btn-warning" onclick="Submit()">Submit</button>

            </div>
              <br /> 
            <div class="col-md-2">

         <a href ="/OnlineTest/TestCreationPage">
    <button type="button"  class="btn btn-danger">CreateTest</button><br /><br />
   </a>
            </div>
        </div>
    </div>
        </div>
</body>
</html>
